{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "lib":["es7"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node", "jasmine", "express"],
    "paths": {
      "*": [
          "node_modules/*",
          "src/types/*"
      ]
    }
  },
  "include": ["src/**/*"]
}